<configuration>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Turn off DEBUG for Unmeshed SDK -->
    <logger name="io.unmeshed.client" level="WARN"/>
    <logger name="io.unmeshed.client.schedulers" level="WARN"/>
    <logger name="io.unmeshed.client.poller" level="WARN"/>
</configuration>
